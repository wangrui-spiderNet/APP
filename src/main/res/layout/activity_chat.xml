<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:id="@+id/activity_chat_leftlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="100dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/robotpicture"/>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:fitsSystemWindows="true"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            app:cardBackgroundColor="#e7e5b9"
            app:cardCornerRadius="10dp"
            app:contentPadding="10dp">

            <TextView
                android:maxEms="10"
                android:singleLine="false"
                android:id="@+id/activity_chat_lefttext"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello world"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="5dp"
        android:id="@+id/activity_chat_rightlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="100dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="10dp"
            app:contentPadding="10dp">

            <TextView
                android:maxEms="10"
                android:singleLine="false"
                android:id="@+id/activity_chat_righttext"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello world"/>
        </android.support.v7.widget.CardView>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/mypicture"/>
    </LinearLayout>


</RelativeLayout>